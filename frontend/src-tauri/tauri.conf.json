{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PR Review Agent",
  "version": "2.0.5",
  "identifier": "com.pr-review.agent",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PR Review App",
        "width": 1200,
        "height": 750,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["PR-Review-Agent"]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/moohamedsalman93/pr-review-app/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5QkQ1NUQ4OENDNjQ2OUMKUldTY1JzYU0yRlc5aVNENzVmQVJUT0FyZ0VEcDJOQUtaeGV6a0F1TmFCN2o2U1NMYmMvYXlhWUIK"
    }
  }
}
