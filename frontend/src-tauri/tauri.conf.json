{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PR Review Agent",
  "version": "1.0.0",
  "identifier": "com.pr-review.agent",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "PR Review App",
        "width": 1200,
        "height": 750,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "shadow": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["PR-Review-Agent"]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "__UPDATE_ENDPOINT_ENV__"
      ],
      "pubkey": "__SIGNING_PUBKEY_ENV__"
    }
  }
}
